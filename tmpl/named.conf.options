acl acl_allow {
        {{.subs.cgnat.network}}{{.subs.cgnat.mask}};
        {{.subs.real_ipv4.network}}{{.subs.real_ipv4.mask}};
        localhost;
        localnets;
};

options {
        directory "/var/cache/bind";
        dnssec-validation auto;
        listen-on-v6 { none; };
        listen-on { {{if .Master}}{{.if.host_mng.ip_master}}{{else if .Backup}}{{.if.host_mng.ip_backup}}{{end}}; };
        recursion yes;
        allow-query { acl_allow; };
};